{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PocketPT Plan Output",
  "type": "object",
  "properties": {
    "workout_plan": {
      "type": "object",
      "description": "Personalized workout program",
      "properties": {
        "training_split": { "type": "string" },
        "weekly_sessions": { "type": "integer" },
        "sessions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "day": { "type": "string" },
              "focus": { "type": "string" },
              "exercises": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "sets": { "type": "integer" },
                    "reps": { "type": "string" },
                    "rest": { "type": "string" },
                    "notes": { "type": "string" }
                  },
                  "required": ["name", "sets", "reps"]
                }
              }
            },
            "required": ["day", "focus", "exercises"]
          }
        }
      },
      "required": ["training_split", "weekly_sessions", "sessions"]
    },
    "nutrition_plan": {
      "type": "object",
      "description": "Dietary recommendations",
      "properties": {
        "calories": { "type": "integer" },
        "protein_grams": { "type": "integer" },
        "carbs_grams": { "type": "integer" },
        "fat_grams": { "type": "integer" },
        "meals": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "meal_name": { "type": "string" },
              "example_foods": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["meal_name", "example_foods"]
          }
        }
      },
      "required": ["calories", "protein_grams", "carbs_grams", "fat_grams"]
    },
    "lifestyle_recommendations": {
      "type": "object",
      "description": "General lifestyle guidance",
      "properties": {
        "sleep_hours": { "type": "string" },
        "hydration": { "type": "string" },
        "stress_management": { "type": "string" }
      }
    }
  },
  "required": ["workout_plan", "nutrition_plan"]
}
