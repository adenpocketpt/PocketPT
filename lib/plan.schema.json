{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WorkoutAndDietPlan",
  "type": "object",
  "properties": {
    "workout_program": {
      "type": "object",
      "description": "Detailed workout plan tailored to the client's goal, fitness level, and equipment.",
      "properties": {
        "weekly_schedule": {
          "type": "array",
          "description": "List of training days with their focus.",
          "items": {
            "type": "object",
            "properties": {
              "day": { "type": "string" },
              "focus": { "type": "string" },
              "exercises": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "sets": { "type": "integer" },
                    "reps": { "type": "string" },
                    "rest": { "type": "string" },
                    "notes": { "type": "string" }
                  },
                  "required": ["name", "sets", "reps"]
                }
              }
            },
            "required": ["day", "focus", "exercises"]
          }
        },
        "cardio": {
          "type": "string",
          "description": "Cardio recommendations (type, frequency, duration, intensity)."
        },
        "mobility_and_recovery": {
          "type": "string",
          "description": "Stretching, recovery, and lifestyle advice."
        }
      },
      "required": ["weekly_schedule"]
    },
    "dietary_guidance": {
      "type": "object",
      "description": "Macronutrient and calorie targets with meal guidance.",
      "properties": {
        "calories_per_day": { "type": "integer" },
        "protein_g": { "type": "integer" },
        "carbs_g": { "type": "integer" },
        "fat_g": { "type": "integer" },
        "meal_suggestions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "meal": { "type": "string" },
              "examples": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "required": ["meal", "examples"]
          }
        },
        "notes": { "type": "string" }
      },
      "required": ["calories_per_day", "protein_g", "carbs_g", "fat_g"]
    },
    "lifestyle_recommendations": {
      "type": "string",
      "description": "Extra advice based on clientâ€™s job, sleep, stress, etc."
    }
  },
  "required": ["workout_program", "dietary_guidance"]
}
